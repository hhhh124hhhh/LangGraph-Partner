# AI Partner Demo 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ==============================================
# 后端配置
# ==============================================

# 环境设置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 服务器配置
HOST=0.0.0.0
PORT=8000

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# 智谱AI API配置
# ==============================================

# 智谱AI API密钥 (必填)
ZHIPU_API_KEY=your_zhipu_api_key_here

# 智谱AI基础URL
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# 智谱AI模型配置
ZHIPU_MODEL=glm-4-flash

# 兼容性别名（向后兼容）
OPENAI_API_KEY=${ZHIPU_API_KEY}
OPENAI_BASE_URL=${ZHIPU_BASE_URL}
DEFAULT_MODEL=${ZHIPU_MODEL}

# ==============================================
# LangGraph配置
# ==============================================

# ChromaDB配置
CHROMA_DB_PATH=./vector_db
CHROMA_HOST=localhost
CHROMA_PORT=8001

# LangGraph检查点配置
CHECKPOINT_TYPE=memory
CHECKPOINT_PATH=./memory

# ==============================================
# 向量存储配置
# ==============================================

# 向量模型配置
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384

# 知识库配置
KNOWLEDGE_BASE_PATH=./demo_data/sample_notes
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ==============================================
# 记忆管理配置
# ==============================================

# 记忆存储路径
MEMORY_DB_PATH=./memory
MEMORY_MAX_TURNS=100
MEMORY_RETENTION_DAYS=30

# ==============================================
# 画像配置
# ==============================================

# 画像配置文件路径
USER_PERSONA_PATH=./config/user-persona.md
AI_PERSONA_PATH=./config/ai-persona.md

# 默认画像
DEFAULT_USER_PERSONA=langgraph_developer
DEFAULT_AI_PERSONA=technical_mentor

# ==============================================
# 缓存配置
# ==============================================

# Redis配置 (可选)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 内存缓存配置
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# ==============================================
# 安全配置
# ==============================================

# API密钥 (生产环境建议设置)
API_SECRET_KEY=your_secret_key_here

# JWT配置 (如需要)
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ==============================================
# 演示模式配置
# ==============================================

# 演示模式开关
DEMO_MODE=true

# 演示数据路径
DEMO_DATA_PATH=./demo_data

# 模拟模式开关 (当没有API密钥时使用)
SIMULATION_MODE=true

# ==============================================
# 监控和日志配置
# ==============================================

# 日志配置
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 性能监控
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================================
# 开发配置
# ==============================================

# 开发模式配置
HOT_RELOAD=true
AUTO_RESTART=true

# 测试配置
TEST_DATABASE_URL=sqlite:///./test.db
TEST_MODE=false

# ==============================================
# 后端 FastAPI 配置
# ==============================================

# 服务器配置
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true

# LLM配置（使用标准变量别名）
LLM_MODEL=${ZHIPU_MODEL}
OPENAI_API_KEY=${ZHIPU_API_KEY}
OPENAI_BASE_URL=${ZHIPU_BASE_URL}
AI_CLAUDE_API_KEY=

# LLM参数
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# 存储路径配置
VECTOR_DB_PATH=./vector_db
MEMORY_DIR=./memory
CONFIG_DIR=./config

# 会话配置
DEFAULT_SESSION_TIMEOUT=3600
MAX_CONTEXT_TURNS=10

# 搜索配置
DEFAULT_SEARCH_RESULTS=5
MIN_SIMILARITY_SCORE=0.3

# 日志配置
LOG_FORMAT=json

# ==============================================
# 前端 Vite 配置 (VITE_ 前缀)
# ==============================================

# 服务器连接配置
VITE_API_BASE_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws

# 应用基础配置
VITE_APP_NAME=AI Partner
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development
VITE_DEBUG=true

# 功能开关
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_DEV_MODE=true
VITE_SHOW_DEVTOOLS=true
VITE_DEMO_MODE=true
VITE_SIMULATION_MODE=false

# AI模型配置（使用标准变量）
VITE_DEFAULT_MODEL=${ZHIPU_MODEL}
VITE_ZHIPU_BASE_URL=${ZHIPU_BASE_URL}
VITE_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# 功能配置
VITE_CHROMA_DB_PATH=./vector_db
VITE_MEMORY_DB_PATH=./memory
VITE_MEMORY_MAX_TURNS=100
VITE_DEFAULT_USER_PERSONA=langgraph_developer
VITE_DEFAULT_AI_PERSONA=technical_mentor
